---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";

const styles = {
  section: "mt-16 pt-8 border-t border-gray-600",
  contentBlock:
    "mb-8 transform transition-transform duration-300 ease-in-out hover:translate-x-2",
  title: "text-xl font-bold mb-2",
  description: "text-gray-400",
  cta: "inline-block px-6 py-3 bg-white text-black font-bold transition-colors duration-300 ease-in-out hover:bg-gray-400 hover:text-white",
};
---

<BaseLayout title="Web3Yoda - Your Web3 Guide">
  <div class="container">
    <header>
      <h1 class="text-4xl font-bold mb-2">Your Web3 Onboarding Guide</h1>
      <p class="text-gray-400 mb-8">
        Start your Web3 journey with a seasoned guide who's walked the path
        before you. Skip the theory and dive into practical Web3 knowledge from
        someone who lives and breathes it daily.
      </p>
    </header>

    <section class={styles.section} aria-labelledby="services-title">
      <h2 id="services-title" class="sr-only">Our Services</h2>
      <div class={styles.contentBlock}>
        <h3 class={styles.title}>Web3 Basics</h3>
        <p class={styles.description}>
          All you need to start your transition into Web3
        </p>
      </div>
      <div class={styles.contentBlock}>
        <h3 class={styles.title}>NFT & Digital Collectibles</h3>
        <p class={styles.description}>
          Deep dive into NFTs, digital collectibles & marketplaces
        </p>
      </div>
      <div class={styles.contentBlock}>
        <h3 class={styles.title}>Multi-Chain Mastery</h3>
        <p class={styles.description}>
          Advanced guidance on navigating multiple blockchain ecosystems
        </p>
      </div>
      <div class={styles.contentBlock}>
        <h3 class={styles.title}>Custom Tools Development</h3>
        <p class={styles.description}>
          Twitter bots, wallet integrations, workflow automations & AI agents
        </p>
      </div>

      <div class={styles.contentBlock}>
        <h3 class={styles.title}>Free Discovery Call</h3>
        <p class={`${styles.description} mb-4`}>
          15 min call to get to know your personal needs
        </p>
        <a href="https://cal.com/web3yoda/15min" class={styles.cta}
          >Schedule a Call</a
        >
      </div>
    </section>

    <section class={styles.section} aria-labelledby="benefits-title">
      <h2 id="benefits-title" class="text-2xl font-bold mb-8">
        Why Choose Web3Yoda?
      </h2>
      <div class="space-y-12">
        <div class={styles.contentBlock}>
          <h3 class={styles.title}>Battle-Tested Web Veteran</h3>
          <p class={styles.description}>
            Ex-Googler (SQE team), Web2 brand founder, with hands-on experience
            navigating the evolving web3 landscape.
          </p>
        </div>
        <div class={styles.contentBlock}>
          <h3 class={styles.title}>Real-World Experience</h3>
          <p class={styles.description}>
            Daily practitioner actively trading crypto perps, NFTs, ordinals,
            memecoins & runes. I don't just teach it, I live it.
          </p>
        </div>
        <div class={styles.contentBlock}>
          <h3 class={styles.title}>Focused Mastery Path</h3>
          <p class={styles.description}>
            Tailored guidance focusing on exactly what you need to master - no
            fluff, just practical Web3 skills
          </p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
